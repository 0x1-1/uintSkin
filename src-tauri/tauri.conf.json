{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "uintSkin",
    "version": "1.24.21"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "identifier": "com.uintskin.app",
      "targets": "all",
      "icon": ["icons/icon.png"]
    },
    "windows": [
      {
        "label": "main",
        "title": "uintSkin",
        "width": 1280,
        "height": 840,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "allowlist": {
      "dialog": {
        "open": true
      },
      "shell": {
        "open": true
      },
      "fs": {
        "all": true
      },
      "window": {
        "all": true
      },
      "event": {
        "all": true
      }
    },
    "security": {
      "csp": null
    }
  }
}
